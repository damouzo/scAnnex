/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running full-size tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a full size pipeline test.

    Use as follows:
        nextflow run scAnnex -profile test_full,docker

----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Full test profile'
    config_profile_description = 'Full test dataset to check pipeline function'

    // Input data for full size test
    input  = 'https://raw.githubusercontent.com/yourusername/scAnnex/main/assets/samplesheet_test_full.csv'
    outdir = 'test_full_results'
    
    // Use default processing options
    run_doublet_detection = true
    run_harmony           = true
    leiden_resolution     = '0.5,1.0,1.5'
}
